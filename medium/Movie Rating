-- 1. User who rated the most movies
WITH UserCount AS (
    SELECT u.name, COUNT(*) AS cnt
    FROM Users u
    JOIN MovieRating mr ON u.user_id = mr.user_id
    GROUP BY u.name
)
, MaxUser AS (
    SELECT name
    FROM UserCount
    WHERE cnt = (SELECT MAX(cnt) FROM UserCount)
    ORDER BY name
    LIMIT 1
)

-- 2. Movie with highest average rating in Feb 2020
, MovieAvg AS (
    SELECT m.title, AVG(mr.rating) AS avg_rating
    FROM Movies m
    JOIN MovieRating mr ON m.movie_id = mr.movie_id
    WHERE mr.created_at >= '2020-02-01' AND mr.created_at < '2020-03-01'
    GROUP BY m.title
)
, MaxMovie AS (
    SELECT title
    FROM MovieAvg
    WHERE avg_rating = (SELECT MAX(avg_rating) FROM MovieAvg)
    ORDER BY title
    LIMIT 1
)

-- Combine results
SELECT name AS results FROM MaxUser
UNION ALL
SELECT title AS results FROM MaxMovie;
