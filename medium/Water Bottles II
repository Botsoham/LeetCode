class Solution:
    def maxBottlesDrunk(self, numBottles: int, numExchange: int) -> int:
        total = numBottles
        empties = numBottles

        while empties >= numExchange:
            # Exchange empties for 1 full bottle
            empties -= numExchange
            numBottles = 1
            total += 1
            empties += numBottles  # after drinking
            numExchange += 1

        return total
