class Solution:
    def lengthOfLongestSubstring(self, s: str) -> int:
        seen = set()
        left = 0
        max_len = 0

        for right in range(len(s)):
            # If duplicate found, shrink the window from the left
            while s[right] in seen:
                seen.remove(s[left])
                left += 1
            
            # Add current character
            seen.add(s[right])
            
            # Update max length
            max_len = max(max_len, right - left + 1)
        
        return max_len
