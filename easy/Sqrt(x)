class Solution:
    def mySqrt(self, x: int) -> int:
        if x < 2:  # 0 and 1 are trivial
            return x

        left, right = 1, x // 2  # sqrt(x) <= x//2 for x > 1
        while left <= right:
            mid = (left + right) // 2
            if mid * mid == x:
                return mid
            elif mid * mid < x:
                left = mid + 1
            else:
                right = mid - 1
        
        return right  # right will be floor(sqrt(x))
