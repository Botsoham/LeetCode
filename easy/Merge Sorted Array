class Solution:
    def merge(self, nums1: List[int], m: int, nums2: List[int], n: int) -> None:
        """
        Do not return anything, modify nums1 in-place instead.
        Merges nums2 into nums1 as one sorted array.
        """
        # Start filling from the end of nums1
        i = m - 1  # Pointer for last valid element in nums1
        j = n - 1  # Pointer for last element in nums2
        k = m + n - 1  # Pointer for last position in nums1 (total length)

        # Merge from the back
        while i >= 0 and j >= 0:
            if nums1[i] > nums2[j]:
                nums1[k] = nums1[i]
                i -= 1
            else:
                nums1[k] = nums2[j]
                j -= 1
            k -= 1

        # If any elements remain in nums2, copy them
        while j >= 0:
            nums1[k] = nums2[j]
            j -= 1
            k -= 1
